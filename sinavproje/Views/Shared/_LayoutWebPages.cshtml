@model IEnumerable<sinavproje.models.modelmarkakategori>
@{
    Layout = null;
}


<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/7ec0bf3f0e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
    <title>Kampüs Market</title>
    <link rel="stylesheet" href="~/webPages/01/assets/css_kamus/style.css">
    <link href="~/webPages/01/assets/css_kamus/hover.css" rel="stylesheet" media="all">
</head>

<body>
    <header>
        <div class="logo-container">
            <img src="~/webPages/01/assets/img/Yellow and Black Online Shop Business Logo.jpg" alt="Logo" class="logo-img hvr-pulse-shrink">
        </div>
        <div class="container">
            <div class="icons">
                <div class="icon">
                    <a href="/Login/login"><i class="fa-solid fa-user fa-2xl" style="color: #3c3633;"></i></a>
                </div>
                

                <div class="icon">
                    <span id="cart-counter" style="position: relative;">
                        <a href="/sepet/sepetMusteri/">
                            <i class="fa-solid fa-cart-shopping fa-2xl" style="color: rgba(60, 54, 51, 0.5); background-color: rgba(0, 0, 0, 0.2); padding: 5px; border-radius: 50%;"></i>
                        </a>
                        <span style="position: absolute; top: -10px; left: 20px; background-color: rgba(0, 0, 0, 0.2); color: red; padding: 2px 5px; border-radius: 4px; font-size: 12px;">
                            @Session["CartCount"]
                        </span>
                    </span>

                 

                    <span style="color: black; font-size: 1.2em;">@Session["UserName"] </span>

                    @if (Session["UserName"] != null)
                    {
                        <button type="button" onclick="location.href='@Url.Action("Logout", "Login")'" class="btn btn-primary">Sign Out</button>
                    }
                </div>

            </div>
        </div>
    </header>
    <main>
        @using (Html.BeginForm("product", "urunlar", FormMethod.Get))
        {
            <div class="container">
                <div class="search">
                   
                    @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Aradığınız Ürünler..." })
                    <button type="submit">Ara</button>
                </div>
            </div>
        }
    </main>

    <nav>
        <ul>
            <li><a href="/urunlar/product" class="active">Tüm Ürünler</a> </li>
            <li><a href="https://www.cci.com.tr/" target="_blank" class="active">İçecekler</a></li>
            <li><a href="/index" target="_blank" class="active">Temizlik Malzemeleri</a></li>
            <li><a href="/index" target="_blank" class="active">Parfüm</a></li>
            <li><a href="/index" target="_blank" class="active">Meyve</a></li>
            <li><a href="/index" target="_blank" class="active">Sebze</a></li>
            <li><a href="/index" target="_blank" class="active">Yiyecekler</a></li>
        </ul>
    </nav>
    @RenderBody()
    <footer>
        <section id="newsletter" class="newsletter">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="hm-footer-widget">
                            <div class="hm-foot-title">
                                <h4>Kurumsal</h4>
                            </div>
                            <div class="hm-foot-menu">
                                <ul>
                                    <li><a href="/urunlar/product">Ana Sayfa</a></li>
                                    <li><a href="/Login/login">Üye Giriş</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="hm-footer-widget">
                            <div class="hm-foot-title">
                                <h4>Ürünler</h4>
                            </div>
                            <div class="hm-foot-menu">
                                <ul>
                                    <li><a href="#">İçecekler</a></li>
                                    <li><a href="#">Temizlik Malzemeleri</a></li>
                                    <li><a href="#">Parfüm</a></li>
                                    <li><a href="#">Meyve</a></li>
                                    <li><a href="#">Sebze</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="hm-footer-widget">
                            <div class="hm-foot-title">
                                <h4>Hızlı Erişim</h4>
                            </div>
                            <div class="hm-foot-menu">
                                <ul>
                                    <li><a href="#">Yeni Ürünler</a></li>
                                    <li><a href="#">İndirimdeki Ürünler</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12">
                        <div class="hm-footer-widget">
                            <div class="hm-foot-title">
                                <h4>Bize Ulaşın</h4>
                            </div>
                            <div class="hm-foot-para">
                                <p><i class="fa fa-phone" aria-hidden="true"></i><a href="tel:+123456789"> +905317479702</a></p>
                                <p><i class="fa fa-envelope-o" aria-hidden="true"></i><a href="mailto:info@domain.com"> gaber1132@hotmail.com</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </footer>

    <script src="https://kit.fontawesome.com/7ec0bf3f0e.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>

</body>
</html>
