@model sinavproje.Models.dbsepet
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("sepetInsert", "sepet", FormMethod.Post))
{
<div class="container">
    <div class="form-group">
        <label>urun ID:</label>
        @Html.DropDownListFor(x => x.urunId, (List<SelectListItem>)ViewBag.urunler, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>kategori ID:</label>
        @Html.DropDownListFor(x => x.kategoriId, (List<SelectListItem>)ViewBag.kategoriler, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>musteri ID:</label>
        @Html.DropDownListFor(x => x.musteriId, (List<SelectListItem>)ViewBag.musteri, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Tarih:</label>
        @Html.TextBoxFor(x => x.tarih, new { @class = "form-control", type = "date", Value = Model.tarih != null ? Model.tarih.ToString() : "" })



    </div>
    <div class="form-group">
        <label>Saat:</label>
        @Html.TextBoxFor(x => x.saat, new { @class = "form-control", type = "time", Value = Model.saat })

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Insert</button>
    </div>
</div>
}